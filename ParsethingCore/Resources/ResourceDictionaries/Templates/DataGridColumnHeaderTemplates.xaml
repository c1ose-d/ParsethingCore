<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="DataGridColumnHeaderBase.Background" Color="#0000"/>
    <SolidColorBrush x:Key="DataGridColumnHeaderBase.BorderBrush" Color="#BD1414"/>
    <SolidColorBrush x:Key="DataGridColumnHeaderBase.Foreground" Color="#BD1414"/>
    <Style x:Key="DataGridColumnHeaderBase" TargetType="{x:Type DataGridColumnHeader}">
        <Setter Property="Background" Value="{StaticResource DataGridColumnHeaderBase.Background}"/>
        <Setter Property="BorderBrush" Value="{StaticResource DataGridColumnHeaderBase.BorderBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource DataGridColumnHeaderBase.Foreground}"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Padding" Value="8,0"/>
        <Setter Property="FontFamily" Value="../../Fonts/#Mustica Pro"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="BorderThickness" Value="0,0,0,2"/>
    </Style>
</ResourceDictionary>