<UserControl x:Class="ParsethingCore.EmployeesDataGrid" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" Loaded="UserControl_Loaded">
    <DataGrid x:Name="View" Style="{DynamicResource DataGridBase}" SizeChanged="View_SizeChanged">
        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding Path=FullName}" Header="ФИО"/>
            <DataGridTextColumn Binding="{Binding Path=Position.Kind}" Header="Должность"/>
            <DataGridTextColumn Binding="{Binding Path=UserName}" Header="Учетная запись"/>
        </DataGrid.Columns>
    </DataGrid>
</UserControl>